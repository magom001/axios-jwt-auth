{
  "compilerOptions": {
    "declaration": true,
    "target": "esnext",
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ES2015", "DOM"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["tests"]
}
